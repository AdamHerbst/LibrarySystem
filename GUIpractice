package helloworld;

import org.eclipse.swt.widgets.Display;
import org.eclipse.swt.widgets.Shell;
import org.eclipse.swt.widgets.Text;
import org.eclipse.swt.SWT;
import org.eclipse.swt.widgets.Label;
import org.eclipse.wb.swt.SWTResourceManager;
import org.eclipse.swt.widgets.Button;

public class heyworld {

	protected Shell shell;
	private static Text firstlastname;
	private Text age;
	private Text favoritebook;
	private Label lblAge;
	private Label lblFavoriteBook;
	private static Text textresult;

	/**
	 * Launch the application.
	 * @param args
	 */
	public static void main(String[] args) {
		try {
			heyworld window = new heyworld();
			window.open();
		} catch (Exception e) {
			e.printStackTrace();
		}
		System.out.println(firstlastname);

	}

	/**
	 * Open the window.
	 */
	public void open() {
		Display display = Display.getDefault();
		createContents();
		shell.open();
		shell.layout();
		while (!shell.isDisposed()) {
			if (!display.readAndDispatch()) {
				display.sleep();
			}
		}
	}

	/**
	 * Create contents of the window.
	 */
	protected void createContents() {
		shell = new Shell();
		shell.setSize(651, 445);
		shell.setText("First GUI");
		
		firstlastname = new Text(shell, SWT.BORDER);
		firstlastname.setBounds(42, 36, 202, 26);
		firstlastname.getText();
		
		age = new Text(shell, SWT.BORDER);
		age.setBounds(42, 102, 202, 26);
		
		Label lblName = new Label(shell, SWT.NONE);
		lblName.setBounds(42, 10, 89, 20);
		lblName.setText("Please enter your name: ");
		
		favoritebook = new Text(shell, SWT.BORDER);
		favoritebook.setBounds(42, 181, 202, 26);
		favoritebook.getText();
		
		lblAge = new Label(shell, SWT.NONE);
		lblAge.setBounds(42, 76, 70, 20);
		lblAge.setText("Age");
		
		
		lblFavoriteBook = new Label(shell, SWT.NONE);
		lblFavoriteBook.setBounds(42, 155, 97, 20);
		lblFavoriteBook.setText("Favorite Book");
		
		

		
		textresult = new Text(shell, SWT.BORDER);
		textresult.setBounds(33, 265, 336, 91);
	

	
		
	}}

